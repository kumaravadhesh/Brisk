<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <style>
        #bottom-menu{
            color:white;
            line-height:40px;
        }
        #bottom-menu a {
            color: white;
        }
    </style>
    <div class="container-fluid" style="padding:0px">
        <img src="~/Images/brisk1.png" style="width:100%" />
    </div>
    
    <div class="navbar navbar-inverse" style="border-radius:0px">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid body-content" style="min-height:60vh">
        @RenderBody()
    </div>
    <div style="background-color:#0094ff" id="bottom-menu">
        <div class="container" >
            <div class="row">
                <div class="col-md-2"><a href="#">Home</a></div>
                <div class="col-md-2"><a href="#">About</a></div>
                <div class="col-md-2"><a href="#">Services</a></div>
                <div class="col-md-2"><a href="#">Clientele</a></div>
                <div class="col-md-2"><a href="#">Query</a></div>
                <div class="col-md-2"><a href="#">Contact</a></div>
            </div>
        </div>
    </div>
    
    <footer style="padding:10px;margin:0px;background-color:black;height:40px;text-align:center;color:white">
        <p>&copy; @DateTime.Now.Year Brisk Infotech Solutions | Powered by Tagit Consultancy Services</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
